@model IEnumerable<FullCalendar_MVC.Models.Convenio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Criar Novo", "Create")
</p>
<div class="row">
    <div class="col-md-8 col-md-offset-1">
        <table class="table col-md-8">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>Ações</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ConvenioId }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.ConvenioId }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.ConvenioId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>