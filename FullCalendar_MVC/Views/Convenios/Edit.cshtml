@model FullCalendar_MVC.Models.Convenio

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center">Editar Convênio</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-offset-2">
        <div class="row">
            <div class="col-md-8">
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                @Html.HiddenFor(model => model.ConvenioId)

                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-md-6 col-md-offset-2">
                            <label class="control-label">Nome</label>
                            @Html.EditorFor(model => model.Nome, new {htmlAttributes = new {@class = "form-control"}})
                            @Html.ValidationMessageFor(model => model.Nome, "", new {@class = "text-danger"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2" style="padding-top: 5px; padding-left: 35px;">
                            <input type="submit" value="Salvar" class="btn btn-default"/>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
